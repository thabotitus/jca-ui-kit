{% extends "dashboard.njk" %}

{% block jca_sidebar %}
  {{nav.active('pricing')}}
{% endblock %}

{% block jca_page_header %}
  {{
    pageHeader.details(
      'Pricing',
      'Pricing cards',
      'card'
    )
  }}
{% endblock %}

{% block jca_content %}
  <div class="row">
    <div class="col-md-12">
      <div class="jca-code-reference">
        <div class="jca-code-reference__example">
          <div class="jca-code-reference__description">
            A simple way to present pricing for services offered
          </div>
          <div class="jca-code-reference__visual">
            <div class="jca-card-pricing">
              <div class="jca-card-pricing__header">
                <div class="jca-card-pricing__header-main">Small Firm</div>
                <div class="jca-card-pricing__header-sub">1-20 Members</div>
              </div>

              <div class="jca-card-pricing__price">
                <span class="jca-card-pricing__price-value">1000</span>
                <div class="jca-card-pricing__price-meta">
                  <div class="jca-card-pricing__price-currency">ZAR</div>
                  <div class="jca-card-pricing__price-period">monthly</div> 
                </div>
              </div>

              <div class="jca-card-pricing__features">
                <ul>
                  <li>
                    <ion-icon class="jca-card-pricing__icon" name="finger-print-outline"></ion-icon>
                    Secure data
                  </li>
                  <li>
                    <ion-icon class="jca-card-pricing__icon" name="albums-outline"></ion-icon>
                    Unlimited Consultations
                  </li>
                  <li>
                    <ion-icon class="jca-card-pricing__icon" name="cash-outline"></ion-icon>
                    Automated Payments
                  </li>
                  <li>
                    <ion-icon class="jca-card-pricing__icon" name="calendar-outline"></ion-icon>
                    Schedule Management
                  </li>
                </ul>
              </div>

              <div class="jca-card-pricing__actions">
                <a href="#" class="jca-card-pricing__actions-item">
                  Sign up
                </a>

                <a href="#" class="jca-card-pricing__actions-item">
                  Contact Us
                </a>

                <a href="#" class="jca-card-pricing__actions-item">
                  <ion-icon name="logo-whatsapp" size="large"></ion-icon>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="jca-code-reference__code">
          <pre>
              <code class="language-html">
&lt;div class="jca-card-pricing"&gt;
  &lt;div class="jca-card-pricing__header"&gt;
    &lt;div class="jca-card-pricing__header-main"&gt;Small Firm&lt;/div&gt;
    &lt;div class="jca-card-pricing__header-sub"&gt;1-20 Members&lt;/div&gt;
  &lt;/div&gt;

  &lt;div class="jca-card-pricing__price"&gt;
    &lt;span class="jca-card-pricing__price-value"&gt;1000&lt;/span&gt;
    &lt;div class="jca-card-pricing__price-meta"&gt;
      &lt;div class="jca-card-pricing__price-currency"&gt;ZAR&lt;/div&gt;
      &lt;div class="jca-card-pricing__price-period"&gt;monthly&lt;/div&gt; 
    &lt;/div&gt;
  &lt;/div&gt;

  &lt;div class="jca-card-pricing__features"&gt;
    &lt;ul&gt;
      &lt;li&gt;
        &lt;ion-icon class="jca-card-pricing__icon" name="finger-print-outline"&gt;&lt;/ion-icon&gt;
        Secure data
      &lt;/li&gt;
      &lt;li&gt;
        &lt;ion-icon class="jca-card-pricing__icon" name="albums-outline"&gt;&lt;/ion-icon&gt;
        Unlimited Consultations
      &lt;/li&gt;
      &lt;li&gt;
        &lt;ion-icon class="jca-card-pricing__icon" name="cash-outline"&gt;&lt;/ion-icon&gt;
        Automated Payments
      &lt;/li&gt;
      &lt;li&gt;
        &lt;ion-icon class="jca-card-pricing__icon" name="calendar-outline"&gt;&lt;/ion-icon&gt;
        Schedule Management
      &lt;/li&gt;
    &lt;/ul&gt;
  &lt;/div&gt;

  &lt;div class="jca-card-pricing__actions"&gt;
    &lt;a href="#" class="jca-card-pricing__actions-item"&gt;
      Sign up
    &lt;/a&gt;

    &lt;a href="#" class="jca-card-pricing__actions-item"&gt;
      Contact Us
    &lt;/a&gt;

    &lt;a href="#" class="jca-card-pricing__actions-item"&gt;
      &lt;ion-icon name="logo-whatsapp" size="large"&gt;&lt;/ion-icon&gt;
    &lt;/a&gt;
  &lt;/div&gt;
&lt;/div&gt;
              </code>
            </pre>
        </div>
      </div>
    </div>
  </div>
{% endblock %}